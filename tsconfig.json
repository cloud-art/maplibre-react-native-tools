{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "paths": {
      "@@/*": ["."],
      "@/*": ["./src/*"]
    },
    "noEmit": true
  },
  "include": ["src", "babel.config.js", "eslint.config.mjs", "index.ts"],
  "exclude": ["node_modules"]
}
